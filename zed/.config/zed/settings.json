// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": "Catppuccin Mocha",
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "play_sound_when_agent_done": true
  },
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 200
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "terminal": {
    "font_family": "UbuntuMono Nerd Font Mono",
    "font_size": 20,
    "line_height": {
      "custom": 1.01
    }
  },
  "experimental.theme_overrides": {
    "terminal.ansi.background": null,
    "terminal.ansi.black": "#343644",
    "terminal.ansi.white":"#c6cad7",
    "terminal.ansi.blue":"#5ec4ff",
    "terminal.ansi.red":"#f06d59",
    "terminal.ansi.green":"#7ac972",
    "terminal.ansi.yellow":"#ffd666",
    "terminal.ansi.magenta":"#7764d8",
    "terminal.ansi.cyan":"#4fc4af",
    "terminal.ansi.bright_black":"#585b70",
    "terminal.ansi.bright_white":"#ffffff",
    "terminal.ansi.bright_blue":"#89cefa",
    "terminal.ansi.bright_red":"#f38b90",
    "terminal.ansi.bright_green":"#a6e3a1",
    "terminal.ansi.bright_yellow":"#f9e2af",
    "terminal.ansi.bright_magenta":"#baacff",
    "terminal.ansi.bright_cyan":"#94e2d5",
    "players": [
      {
        "cursor": "#baacff"
      }
    ]
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "typeCheckingMode": "basic",
          "diagnosticMode": "workspace",
          "inlayHints.callArgumentNames": true,
          "inlayHints.types": true
        }
      }
    }
  }
}
